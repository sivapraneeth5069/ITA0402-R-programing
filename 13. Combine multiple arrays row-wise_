
arr1 <- matrix(1:6, nrow = 2, ncol = 3)   # 2x3
arr2 <- matrix(7:12, nrow = 2, ncol = 3)  # 2x3
arr3 <- matrix(13:18, nrow = 2, ncol = 3) # 2x3

cat("Array 1:\n"); print(arr1)
cat("Array 2:\n"); print(arr2)
cat("Array 3:\n"); print(arr3)


combined <- rbind(arr1, arr2, arr3)

cat("\nCombined Array (row-wise):\n")
print(combined)
