
vec1 <- c(1, 2, 3, 4, 5, 6)
vec2 <- c(7, 8, 9, 10, 11, 12)


arr <- array(
  c(vec1, vec2),         # data source
  dim = c(3, 2, 2),      # dimensions: 3 rows × 2 cols × 2 tables
  dimnames = list(
    paste0("Row", 1:3), 
    paste0("Col", 1:2), 
    paste0("Table", 1:2)
  )
)


print("3D Array with dimension names:")
print(arr)


cat("\nSpecific elements:\n")
print(arr["Row2", "Col1", "Table1"])  
print(arr["Row3", , "Table2"])         
print(arr[ , "Col2", "Table1"])      
print(arr[ , , "Table2"])            
