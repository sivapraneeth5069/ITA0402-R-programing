  
set.seed(123)   # reproducibility
rand_norm <- rnorm(1000, mean = 0, sd = 1)


cat("First 10 random numbers:\n")
print(head(rand_norm, 10))


breaks <- c(-Inf, -2, -1, 0, 1, 2, Inf)
labels <- c("< -2", "-2 to -1", "-1 to 0", "0 to 1", "1 to 2", "> 2")


categories <- cut(rand_norm, breaks = breaks, labels = labels)


cat("\nOccurrences in intervals:\n")
print(table(categories))
